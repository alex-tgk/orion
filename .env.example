# ORION Environment Configuration Template
# Copy this file to .env and fill in your values

# ==========================================
# APPLICATION
# ==========================================
NODE_ENV=development
PORT=3000

# ==========================================
# AUTHENTICATION
# ==========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=15m
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key
REFRESH_TOKEN_EXPIRATION=7d

# ==========================================
# REDIS
# ==========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ==========================================
# DATABASE (Prisma)
# ==========================================
DATABASE_URL=postgresql://user:password@localhost:5432/orion?schema=public

# ==========================================
# OBSERVABILITY
# ==========================================
# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=orion

# Prometheus
PROMETHEUS_PORT=9090

# ==========================================
# AI INTEGRATION (CLI-based, no API keys!)
# ==========================================
# Note: ORION uses CLI-based AI tools
# No API tokens required!

# ==========================================
# MCP SERVER
# ==========================================
MCP_SERVER_PORT=3001
MCP_WEBSOCKET_PORT=3002

# ==========================================
# VECTOR DB
# ==========================================
VECTOR_DB_URL=http://localhost:6333
VECTOR_DB_API_KEY=

# ==========================================
# BULL/QUEUE
# ==========================================
QUEUE_PREFIX=orion

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=debug
LOG_FORMAT=json

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# CORS
# ==========================================
CORS_ORIGIN=http://localhost:4200
CORS_CREDENTIALS=true

# ==========================================
# SESSION
# ==========================================
SESSION_SECRET=your-session-secret-change-in-production
SESSION_MAX_AGE=86400000

# ==========================================
# GITHUB (for automated issue creation)
# ==========================================
GITHUB_TOKEN=your-github-token-for-automation
GITHUB_REPO=your-org/orion

# ==========================================
# FEATURE FLAGS
# ==========================================
ENABLE_REFLECTION=true
ENABLE_AI_ASSISTANCE=true
ENABLE_AUTO_DOCUMENTATION=true
ENABLE_METRICS=true

# ==========================================
# DEVELOPMENT
# ==========================================
DEV_MODE=true
DEBUG=orion:*

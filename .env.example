# ORION Environment Configuration Template
# Copy this file to .env and fill in your values

# ==========================================
# APPLICATION
# ==========================================
NODE_ENV=development
PORT=3000

# ==========================================
# AUTHENTICATION
# ==========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
AUTH_PORT=3001

# ==========================================
# REDIS
# ==========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=true

# ==========================================
# CACHE SERVICE
# ==========================================
CACHE_PORT=3002
DEFAULT_TTL=3600
MAX_CACHE_SIZE=10000
CONNECTION_TIMEOUT=5000
MAX_RETRIES=3

# ==========================================
# DATABASE (PostgreSQL)
# ==========================================
DB_USER=orion
DB_PASSWORD=orion_dev
DB_NAME=orion_dev
DB_PORT=5432
DATABASE_URL=postgresql://orion:orion_dev@localhost:5432/orion_dev

# ==========================================
# RABBITMQ (Message Broker)
# ==========================================
RABBITMQ_USER=orion
RABBITMQ_PASSWORD=orion_dev
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_URL=amqp://orion:orion_dev@localhost:5672

# ==========================================
# OBSERVABILITY
# ==========================================
# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=orion

# Prometheus
PROMETHEUS_PORT=9090

# ==========================================
# AI INTERFACE SERVICE
# ==========================================
# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORGANIZATION=
OPENAI_DEFAULT_MODEL=gpt-3.5-turbo

# Anthropic Configuration
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
ANTHROPIC_DEFAULT_MODEL=claude-3-5-sonnet-20241022

# AI Cache Settings
AI_CACHE_ENABLED=true
AI_CACHE_TTL=3600

# AI Rate Limiting
AI_MAX_REQUESTS_PER_HOUR=100
AI_MAX_TOKENS_PER_REQUEST=4000

# AI Cost Limits
AI_DAILY_COST_LIMIT=10.0
AI_MONTHLY_COST_LIMIT=100.0

# AI Retry Configuration
AI_MAX_RETRIES=3
AI_RETRY_DELAY_MS=1000

# AI Interface Service Port
AI_INTERFACE_PORT=3010

# ==========================================
# MCP SERVER
# ==========================================
MCP_SERVER_PORT=3001
MCP_WEBSOCKET_PORT=3002

# ==========================================
# SEARCH SERVICE
# ==========================================
SEARCH_SERVICE_PORT=3011
SEARCH_DATABASE_URL=postgresql://orion:orion_dev@localhost:5432/orion_search
SEARCH_PROVIDER=postgres
SEARCH_MAX_RESULTS=100
SEARCH_QUERY_TIMEOUT=5000
SEARCH_ENABLE_SEMANTIC=true
SEARCH_SUGGESTION_LIMIT=10
SEARCH_SEMANTIC_WEIGHT=0.2
SEARCH_KEYWORD_WEIGHT=0.4
SEARCH_RECENCY_WEIGHT=0.2
SEARCH_POPULARITY_WEIGHT=0.2
SEARCH_ENABLE_FUZZY=true
SEARCH_MAX_EDIT_DISTANCE=2
SEARCH_ENABLE_ANALYTICS=true
SEARCH_CACHE_RESULTS_TTL=300
SEARCH_CACHE_SUGGESTIONS_TTL=3600

# ==========================================
# VECTOR DB
# ==========================================
VECTOR_DB_SERVICE_PORT=3012
VECTOR_DB_URL=http://localhost:3012
VECTOR_DB_API_KEY=

# ==========================================
# BULL/QUEUE
# ==========================================
QUEUE_PREFIX=orion

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=debug
LOG_FORMAT=json

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# CORS
# ==========================================
CORS_ORIGIN=http://localhost:4200
CORS_CREDENTIALS=true

# ==========================================
# SESSION
# ==========================================
SESSION_SECRET=your-session-secret-change-in-production
SESSION_MAX_AGE=86400000

# ==========================================
# GITHUB (for automated issue creation)
# ==========================================
GITHUB_TOKEN=your-github-token-for-automation
GITHUB_REPO=your-org/orion
ERROR_TO_ISSUE_ENABLED=true
ERROR_TO_ISSUE_MAX_PER_HOUR=50
ERROR_TO_ISSUE_DEDUP_WINDOW_MS=3600000
ERROR_TO_ISSUE_ASSIGNEES=

# ==========================================
# WEBHOOK SECURITY
# ==========================================
WEBHOOK_API_KEY=your-webhook-api-key-for-internal-services

# ==========================================
# FEATURE FLAGS
# ==========================================
ENABLE_REFLECTION=true
ENABLE_AI_ASSISTANCE=true
ENABLE_AUTO_DOCUMENTATION=true
ENABLE_METRICS=true

# ==========================================
# STORAGE SERVICE (S3/MinIO)
# ==========================================
STORAGE_PORT=3008
STORAGE_DATABASE_URL=postgresql://orion:orion_dev@localhost:5432/orion_storage

# S3/MinIO Configuration
S3_REGION=us-east-1
S3_BUCKET=orion-storage
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_ENDPOINT=http://localhost:9000
S3_FORCE_PATH_STYLE=true
S3_SIGNED_URL_EXPIRY=3600
MAX_FILE_SIZE=104857600

# ==========================================
# SECRETS MANAGEMENT SERVICE
# ==========================================
SECRETS_PORT=3003
SECRETS_DATABASE_URL=postgresql://orion:orion_dev@localhost:5432/orion_secrets

# Master Encryption Key (256-bit key in hex format)
# In production, use a KMS-generated key
MASTER_ENCRYPTION_KEY=your-256-bit-encryption-key-here-replace-in-production

# Secret Management Configuration
DEFAULT_TTL_SECONDS=2592000
DEFAULT_ROTATION_INTERVAL=7776000
ENABLE_AUTOMATIC_ROTATION=false
ENABLE_AUDIT_LOGGING=true
MAX_VERSION_HISTORY=10
ACCESS_GRANT_DEFAULT_TTL=86400

# Vault Integration (Optional)
VAULT_ENABLED=false
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=
VAULT_NAMESPACE=admin

# ==========================================
# DEVELOPMENT
# ==========================================
DEV_MODE=true
DEBUG=orion:*

# ORION Environment Configuration Template
# Copy this file to .env and fill in your values

# ==========================================
# APPLICATION
# ==========================================
NODE_ENV=development
PORT=3000

# ==========================================
# AUTHENTICATION
# ==========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
AUTH_PORT=3001

# ==========================================
# REDIS
# ==========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=true

# ==========================================
# DATABASE (PostgreSQL)
# ==========================================
DB_USER=orion
DB_PASSWORD=orion_dev
DB_NAME=orion_dev
DB_PORT=5432
DATABASE_URL=postgresql://orion:orion_dev@localhost:5432/orion_dev

# ==========================================
# RABBITMQ (Message Broker)
# ==========================================
RABBITMQ_USER=orion
RABBITMQ_PASSWORD=orion_dev
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_URL=amqp://orion:orion_dev@localhost:5672

# ==========================================
# OBSERVABILITY
# ==========================================
# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=orion

# Prometheus
PROMETHEUS_PORT=9090

# ==========================================
# AI INTEGRATION (CLI-based, no API keys!)
# ==========================================
# Note: ORION uses CLI-based AI tools
# No API tokens required!

# ==========================================
# MCP SERVER
# ==========================================
MCP_SERVER_PORT=3001
MCP_WEBSOCKET_PORT=3002

# ==========================================
# VECTOR DB
# ==========================================
VECTOR_DB_URL=http://localhost:6333
VECTOR_DB_API_KEY=

# ==========================================
# BULL/QUEUE
# ==========================================
QUEUE_PREFIX=orion

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=debug
LOG_FORMAT=json

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# CORS
# ==========================================
CORS_ORIGIN=http://localhost:4200
CORS_CREDENTIALS=true

# ==========================================
# SESSION
# ==========================================
SESSION_SECRET=your-session-secret-change-in-production
SESSION_MAX_AGE=86400000

# ==========================================
# GITHUB (for automated issue creation)
# ==========================================
GITHUB_TOKEN=your-github-token-for-automation
GITHUB_REPO=your-org/orion

# ==========================================
# FEATURE FLAGS
# ==========================================
ENABLE_REFLECTION=true
ENABLE_AI_ASSISTANCE=true
ENABLE_AUTO_DOCUMENTATION=true
ENABLE_METRICS=true

# ==========================================
# DEVELOPMENT
# ==========================================
DEV_MODE=true
DEBUG=orion:*

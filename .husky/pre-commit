#!/bin/sh

echo "🔍 Running pre-commit checks..."

# Check if any spec files are being committed
SPEC_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '.claude/specs/.*\.md$')

if [ -n "$SPEC_FILES" ]; then
  echo "📄 Spec files detected, running validation..."

  # Build CLI and validate specs
  pnpm nx build:cli dev-tools && pnpm spec:validate || {
    echo ""
    echo "❌ Spec validation failed!"
    echo ""
    echo "Options:"
    echo "  1. Fix issues manually and try again"
    echo "  2. Run 'pnpm spec:validate --fix' to auto-fix"
    echo "  3. Skip hook with 'git commit --no-verify' (not recommended)"
    echo ""
    exit 1
  }

  echo "✅ Spec validation passed"
fi

# Run linting on staged files
echo "🔧 Running linter..."
pnpm lint-staged

echo "✅ Pre-commit checks complete"

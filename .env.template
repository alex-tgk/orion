# ORION Microservices Platform - Environment Configuration Template
#
# SECURITY WARNING:
# - Copy this file to .env and fill in all values
# - NEVER commit .env to version control
# - All secrets must be unique, randomly generated strings
# - Use the provided script to generate secure secrets: npm run generate-secrets
#
# Required minimum secret length: 32 characters
# Must include: uppercase, lowercase, numbers, special characters

# ==========================================
# CRITICAL SECURITY CONFIGURATIONS
# ==========================================

# JWT Authentication Secrets (Generate with: openssl rand -base64 48)
JWT_SECRET=
JWT_REFRESH_SECRET=

# Master Encryption Key for sensitive data (Generate with: openssl rand -base64 48)
MASTER_ENCRYPTION_KEY=
DATABASE_ENCRYPTION_KEY=
SESSION_SECRET=

# ==========================================
# APPLICATION CONFIGURATION
# ==========================================

# Environment: development | staging | production
NODE_ENV=development

# Service URLs
AUTH_SERVICE_URL=http://localhost:3001
USER_SERVICE_URL=http://localhost:3002
NOTIFICATION_SERVICE_URL=http://localhost:3003
GATEWAY_SERVICE_URL=http://localhost:3000
ADMIN_UI_URL=http://localhost:4200

# JWT Configuration
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
JWT_ISSUER=orion-auth
JWT_AUDIENCE=orion-services

# ==========================================
# DATABASE CONFIGURATION
# ==========================================

# PostgreSQL Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=
DB_PASSWORD=
DB_NAME=orion_db

# Database SSL (Production only)
DB_SSL_ENABLED=false
# DB_SSL_CA=

# Prisma Database URL (constructed from above)
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}?schema=public

# ==========================================
# REDIS CONFIGURATION
# ==========================================

# Redis Cache and Session Store
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TLS_ENABLED=false

# ==========================================
# EMAIL CONFIGURATION
# ==========================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@orion.app
SMTP_FROM_NAME=ORION Platform

# ==========================================
# SECURITY SETTINGS
# ==========================================

# CORS Configuration
CORS_ORIGIN=http://localhost:4200
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100
LOGIN_RATE_LIMIT_TTL=60000
LOGIN_RATE_LIMIT_MAX=3

# Account Lockout
ACCOUNT_LOCKOUT_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=900000

# Password Policy
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true

# Session Configuration
SESSION_TIMEOUT=3600000
SESSION_SLIDING_EXPIRATION=true
SESSION_MAX_AGE=86400000

# ==========================================
# FILE STORAGE
# ==========================================

# Avatar Upload Settings
UPLOAD_MAX_FILE_SIZE=5242880
UPLOAD_ALLOWED_MIME_TYPES=image/jpeg,image/png,image/webp
UPLOAD_STORAGE_PATH=./uploads
UPLOAD_SERVE_PATH=/uploads

# ==========================================
# MONITORING & LOGGING
# ==========================================

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_TIMESTAMP=true
LOG_COLORIZE=false

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# Health Checks
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# ==========================================
# DEVELOPMENT SETTINGS (dev only)
# ==========================================

# Development Tools
DEBUG=false
SWAGGER_ENABLED=true
GRAPHQL_PLAYGROUND_ENABLED=false

# ==========================================
# FEATURE FLAGS
# ==========================================

# Feature Toggles
FEATURE_RBAC_ENABLED=true
FEATURE_TWO_FACTOR_AUTH=false
FEATURE_AUDIT_LOGGING=true
FEATURE_ENCRYPTION_AT_REST=true
{
  "dashboard": {
    "title": "Service Mesh Overview",
    "uid": "service-mesh-overview",
    "tags": ["istio", "service-mesh", "orion"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Service Mesh Health Status",
        "type": "stat",
        "gridPos": {"h": 6, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(up{job=\"istiod\"})",
            "legendFormat": "Control Plane",
            "refId": "A"
          },
          {
            "expr": "sum(up{job=\"istio-ingressgateway\"})",
            "legendFormat": "Ingress Gateway",
            "refId": "B"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "none",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 2,
        "title": "Total Request Rate",
        "type": "graph",
        "gridPos": {"h": 6, "w": 9, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(istio_requests_total{reporter=\"destination\"}[5m]))",
            "legendFormat": "Total RPS",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "title": "Success Rate",
        "type": "gauge",
        "gridPos": {"h": 6, "w": 9, "x": 15, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(istio_requests_total{reporter=\"destination\",response_code!~\"5..\"}[5m])) / sum(rate(istio_requests_total{reporter=\"destination\"}[5m])) * 100",
            "legendFormat": "Success Rate %",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "red"},
                {"value": 95, "color": "yellow"},
                {"value": 99, "color": "green"}
              ]
            },
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        }
      },
      {
        "id": 4,
        "title": "Request Volume by Service",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6},
        "targets": [
          {
            "expr": "sum(rate(istio_requests_total{reporter=\"destination\",destination_service_namespace=\"orion\"}[5m])) by (destination_service_name)",
            "legendFormat": "{{destination_service_name}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ],
        "legend": {
          "show": true,
          "values": true,
          "current": true,
          "avg": true
        }
      },
      {
        "id": 5,
        "title": "Error Rate by Service",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6},
        "targets": [
          {
            "expr": "sum(rate(istio_requests_total{reporter=\"destination\",destination_service_namespace=\"orion\",response_code=~\"5..\"}[5m])) by (destination_service_name)",
            "legendFormat": "{{destination_service_name}} (5xx)",
            "refId": "A"
          },
          {
            "expr": "sum(rate(istio_requests_total{reporter=\"destination\",destination_service_namespace=\"orion\",response_code=~\"4..\"}[5m])) by (destination_service_name)",
            "legendFormat": "{{destination_service_name}} (4xx)",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Errors/sec"},
          {"format": "short"}
        ],
        "seriesOverrides": [
          {"alias": "/.*5xx.*/", "color": "red"},
          {"alias": "/.*4xx.*/", "color": "yellow"}
        ]
      },
      {
        "id": 6,
        "title": "P50 Latency by Service",
        "type": "graph",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 14},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(istio_request_duration_milliseconds_bucket{reporter=\"destination\",destination_service_namespace=\"orion\"}[5m])) by (destination_service_name, le))",
            "legendFormat": "{{destination_service_name}} (p50)",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ms", "label": "Latency"},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "title": "P95 Latency by Service",
        "type": "graph",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 14},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(istio_request_duration_milliseconds_bucket{reporter=\"destination\",destination_service_namespace=\"orion\"}[5m])) by (destination_service_name, le))",
            "legendFormat": "{{destination_service_name}} (p95)",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ms", "label": "Latency"},
          {"format": "short"}
        ]
      },
      {
        "id": 8,
        "title": "P99 Latency by Service",
        "type": "graph",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 14},
        "targets": [
          {
            "expr": "histogram_quantile(0.99, sum(rate(istio_request_duration_milliseconds_bucket{reporter=\"destination\",destination_service_namespace=\"orion\"}[5m])) by (destination_service_name, le))",
            "legendFormat": "{{destination_service_name}} (p99)",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ms", "label": "Latency"},
          {"format": "short"}
        ]
      },
      {
        "id": 9,
        "title": "Active Connections",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 22},
        "targets": [
          {
            "expr": "sum(envoy_cluster_upstream_cx_active{cluster_name=~\"outbound.*orion.*\"}) by (cluster_name)",
            "legendFormat": "{{cluster_name}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Connections"},
          {"format": "short"}
        ]
      },
      {
        "id": 10,
        "title": "mTLS Status",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 22},
        "targets": [
          {
            "expr": "sum(istio_requests_total{connection_security_policy=\"mutual_tls\",reporter=\"destination\",destination_service_namespace=\"orion\"})",
            "legendFormat": "mTLS Enabled",
            "refId": "A"
          },
          {
            "expr": "sum(istio_requests_total{connection_security_policy!=\"mutual_tls\",reporter=\"destination\",destination_service_namespace=\"orion\"})",
            "legendFormat": "Plaintext",
            "refId": "B"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          },
          "pieType": "pie",
          "tooltip": {
            "mode": "single"
          }
        }
      }
    ]
  }
}

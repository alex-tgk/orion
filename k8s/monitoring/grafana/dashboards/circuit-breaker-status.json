{
  "dashboard": {
    "title": "Circuit Breaker Status",
    "uid": "circuit-breaker-status",
    "tags": ["istio", "service-mesh", "circuit-breaker", "resilience", "orion"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "templating": {
      "list": [
        {
          "name": "namespace",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(envoy_cluster_circuit_breakers_default_cx_open, cluster_name)",
          "current": {
            "value": "orion",
            "text": "orion"
          },
          "refresh": 1
        },
        {
          "name": "service",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(envoy_cluster_circuit_breakers_default_cx_open{cluster_name=~\".*$namespace.*\"}, cluster_name)",
          "current": {
            "value": "all",
            "text": "All"
          },
          "includeAll": true,
          "refresh": 1
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Circuit Breaker Status Overview",
        "type": "stat",
        "gridPos": {"h": 6, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(envoy_cluster_circuit_breakers_default_cx_open{cluster_name=~\"$service\"})",
            "legendFormat": "Open Circuits",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "red"}
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 2,
        "title": "Connection Pool Overflow",
        "type": "stat",
        "gridPos": {"h": 6, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(envoy_cluster_upstream_cx_overflow{cluster_name=~\"$service\"}[5m]))",
            "legendFormat": "Overflow Rate",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 0.1, "color": "yellow"},
                {"value": 1, "color": "red"}
              ]
            },
            "unit": "reqps"
          }
        }
      },
      {
        "id": 3,
        "title": "Request Pending Overflow",
        "type": "stat",
        "gridPos": {"h": 6, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(envoy_cluster_upstream_rq_pending_overflow{cluster_name=~\"$service\"}[5m]))",
            "legendFormat": "Pending Overflow",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 0.1, "color": "yellow"},
                {"value": 1, "color": "red"}
              ]
            },
            "unit": "reqps"
          }
        }
      },
      {
        "id": 4,
        "title": "Retry Budget Exhausted",
        "type": "stat",
        "gridPos": {"h": 6, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(envoy_cluster_upstream_rq_retry_overflow{cluster_name=~\"$service\"}[5m]))",
            "legendFormat": "Retry Overflow",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 0.1, "color": "yellow"},
                {"value": 1, "color": "red"}
              ]
            },
            "unit": "reqps"
          }
        }
      },
      {
        "id": 5,
        "title": "Circuit Breaker Trips by Service",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6},
        "targets": [
          {
            "expr": "sum(rate(envoy_cluster_circuit_breakers_default_cx_open{cluster_name=~\"$service\"}[5m])) by (cluster_name)",
            "legendFormat": "{{cluster_name}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Open Circuits"},
          {"format": "short"}
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [1],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "name": "Circuit Breaker Opened Alert"
        }
      },
      {
        "id": 6,
        "title": "Connection Pool Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6},
        "targets": [
          {
            "expr": "envoy_cluster_upstream_cx_active{cluster_name=~\"$service\"}",
            "legendFormat": "{{cluster_name}} - Active",
            "refId": "A"
          },
          {
            "expr": "envoy_cluster_circuit_breakers_default_cx_pool_open{cluster_name=~\"$service\"}",
            "legendFormat": "{{cluster_name}} - Limit",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Connections"},
          {"format": "short"}
        ],
        "seriesOverrides": [
          {
            "alias": "/.*Limit.*/",
            "color": "red",
            "fill": 0,
            "linewidth": 2,
            "dashes": true
          }
        ]
      },
      {
        "id": 7,
        "title": "Outlier Detection - Ejected Hosts",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 14},
        "targets": [
          {
            "expr": "envoy_cluster_outlier_detection_ejections_active{cluster_name=~\"$service\"}",
            "legendFormat": "{{cluster_name}} - Ejected Hosts",
            "refId": "A"
          },
          {
            "expr": "rate(envoy_cluster_outlier_detection_ejections_enforced_total{cluster_name=~\"$service\"}[5m])",
            "legendFormat": "{{cluster_name}} - Ejection Rate",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Count"},
          {"format": "short", "label": "Rate"}
        ],
        "seriesOverrides": [
          {"alias": "/.*Rate.*/", "yaxis": 2, "color": "orange"}
        ]
      },
      {
        "id": 8,
        "title": "Request Timeout Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 14},
        "targets": [
          {
            "expr": "sum(rate(envoy_cluster_upstream_rq_timeout{cluster_name=~\"$service\"}[5m])) by (cluster_name)",
            "legendFormat": "{{cluster_name}} - Timeouts",
            "refId": "A"
          },
          {
            "expr": "sum(rate(envoy_cluster_upstream_rq_total{cluster_name=~\"$service\"}[5m])) by (cluster_name)",
            "legendFormat": "{{cluster_name}} - Total",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 9,
        "title": "Pending Requests",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 22},
        "targets": [
          {
            "expr": "envoy_cluster_upstream_rq_pending_active{cluster_name=~\"$service\"}",
            "legendFormat": "{{cluster_name}} - Pending",
            "refId": "A"
          },
          {
            "expr": "envoy_cluster_circuit_breakers_default_rq_pending_open{cluster_name=~\"$service\"}",
            "legendFormat": "{{cluster_name}} - Limit",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Requests"},
          {"format": "short"}
        ],
        "seriesOverrides": [
          {
            "alias": "/.*Limit.*/",
            "color": "red",
            "fill": 0,
            "dashes": true
          }
        ]
      },
      {
        "id": 10,
        "title": "Retry Statistics",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 22},
        "targets": [
          {
            "expr": "sum(rate(envoy_cluster_upstream_rq_retry{cluster_name=~\"$service\"}[5m])) by (cluster_name)",
            "legendFormat": "{{cluster_name}} - Retries",
            "refId": "A"
          },
          {
            "expr": "sum(rate(envoy_cluster_upstream_rq_retry_success{cluster_name=~\"$service\"}[5m])) by (cluster_name)",
            "legendFormat": "{{cluster_name}} - Successful Retries",
            "refId": "B"
          },
          {
            "expr": "sum(rate(envoy_cluster_upstream_rq_retry_overflow{cluster_name=~\"$service\"}[5m])) by (cluster_name)",
            "legendFormat": "{{cluster_name}} - Retry Overflow",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Retries/sec"},
          {"format": "short"}
        ],
        "seriesOverrides": [
          {"alias": "/.*Success.*/", "color": "green"},
          {"alias": "/.*Overflow.*/", "color": "red"}
        ]
      },
      {
        "id": 11,
        "title": "Health Check Status",
        "type": "table",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 30},
        "targets": [
          {
            "expr": "envoy_cluster_health_check_healthy{cluster_name=~\"$service\"}",
            "format": "table",
            "instant": true,
            "refId": "A"
          },
          {
            "expr": "envoy_cluster_membership_healthy{cluster_name=~\"$service\"}",
            "format": "table",
            "instant": true,
            "refId": "B"
          },
          {
            "expr": "envoy_cluster_membership_total{cluster_name=~\"$service\"}",
            "format": "table",
            "instant": true,
            "refId": "C"
          }
        ],
        "transformations": [
          {
            "id": "merge"
          },
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "envoy_cluster_name": false
              },
              "renameByName": {
                "cluster_name": "Service",
                "Value #A": "Health Check Healthy",
                "Value #B": "Membership Healthy",
                "Value #C": "Total Members"
              }
            }
          }
        ],
        "options": {
          "showHeader": true,
          "sortBy": []
        }
      }
    ]
  }
}

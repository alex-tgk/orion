# ORION Admin UI - Environment Configuration Example

# ============================================
# Service Configuration
# ============================================
NODE_ENV=development
PORT=20000

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# Observability Configuration
# ============================================

# Cache TTL Settings (in seconds)
OBSERVABILITY_CACHE_HEALTH_TTL=30
OBSERVABILITY_CACHE_METRICS_TTL=60
OBSERVABILITY_CACHE_STATS_TTL=60
OBSERVABILITY_CACHE_SERVICES_TTL=30

# Health Monitor Settings
HEALTH_MONITOR_ENABLED=true
HEALTH_MONITOR_INTERVAL_MS=30000
HEALTH_MONITOR_STARTUP_DELAY_MS=10000

# HTTP Client Settings
OBSERVABILITY_HTTP_TIMEOUT_MS=5000
OBSERVABILITY_HTTP_RETRIES=0

# Event Storage Settings
OBSERVABILITY_MAX_EVENTS=10000
OBSERVABILITY_EVENTS_DEFAULT_LIMIT=100
OBSERVABILITY_EVENTS_MAX_LIMIT=1000

# Metrics Settings
OBSERVABILITY_METRICS_DEFAULT_RANGE=60
OBSERVABILITY_METRICS_MAX_RANGE=10080

# ============================================
# WebSocket Configuration
# ============================================
WS_CORS_ORIGIN=http://localhost:3000

# ============================================
# Security & CORS
# ============================================
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# ============================================
# Logging
# ============================================
LOG_LEVEL=debug

{
  "name": "feature-flags",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/feature-flags/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/feature-flags",
        "main": "packages/feature-flags/src/index.ts",
        "tsConfig": "packages/feature-flags/tsconfig.lib.json",
        "assets": ["packages/feature-flags/*.md"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/packages/feature-flags"],
      "options": {
        "jestConfig": "packages/feature-flags/jest.config.ts",
        "passWithNoTests": false
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    }
  },
  "tags": ["scope:feature-flags", "type:lib"]
}

{
  "name": "dev-tools",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/dev-tools/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "webpack-cli build",
        "args": ["--node-env=production"],
        "cwd": "packages/dev-tools"
      },
      "configurations": {
        "development": {
          "args": ["--node-env=development"]
        }
      }
    },
    "build:cli": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/dev-tools",
        "tsConfig": "packages/dev-tools/tsconfig.cli.json",
        "main": "packages/dev-tools/src/cli/spec-validator.ts",
        "assets": []
      }
    },
    "validate-specs": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node dist/packages/dev-tools/cli/spec-validator.js validate"
      },
      "dependsOn": ["build:cli"]
    },
    "spec-coverage": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node dist/packages/dev-tools/cli/spec-validator.js coverage"
      },
      "dependsOn": ["build:cli"]
    },
    "generate-spec": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node dist/packages/dev-tools/cli/spec-validator.js generate"
      },
      "dependsOn": ["build:cli"]
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "dev-tools:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "dev-tools:build:development"
        },
        "production": {
          "buildTarget": "dev-tools:build:production"
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/packages/dev-tools"],
      "options": {
        "jestConfig": "packages/dev-tools/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    }
  },
  "tags": ["scope:dev-tools", "type:app"]
}
